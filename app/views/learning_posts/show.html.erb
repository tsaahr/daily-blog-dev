<h1 class="text-2xl font-bold mb-4"><%= @learning_post.title %></h1>

<p class="text-gray-600 mb-2">Criado por <%= @learning_post.user.email %> em <%= @learning_post.created_at.strftime("%d/%m/%Y") %></p>

<div class="prose">
  <%= simple_format(@learning_post.content) %>
</div>

<div class="mt-4">
  <% @learning_post.tag_list.each do |tag| %>
    <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded mr-2">#<%= tag %></span>
  <% end %>
</div>

<% if @learning_post.user == current_user %>
  <div class="mt-6">
    <%= link_to "Editar", edit_learning_post_path(@learning_post), class: "text-yellow-600 mr-4" %>
    <%= link_to "Excluir", @learning_post, method: :delete, data: { confirm: "Tem certeza?" }, class: "text-red-600" %>
  </div>
<% end %>
