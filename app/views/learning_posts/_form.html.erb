<%= form_with model: learning_post, local: true, class: "space-y-6 bg-white p-6 rounded-xl shadow" do |f| %>
  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :title, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= f.label :content, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :content, rows: 6, class: "w-full border border-gray-300 rounded-md px-3 py-2 resize-y focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= f.label :tag_list, "Tags", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :tag_list, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex items-center">
    <%= f.check_box :public, class: "mr-2 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
    <%= f.label :public, "Make public", class: "text-sm text-gray-700" %>
  </div>

  <div>
    <%= f.submit "Salvar", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-5 py-2 rounded-md transition" %>
  </div>
<% end %>
