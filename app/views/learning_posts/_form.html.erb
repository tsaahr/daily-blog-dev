<%= form_with model: learning_post, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :title, class: "block font-semibold" %>
    <%= f.text_field :title, class: "w-full border border-gray-300 rounded px-2 py-1" %>
  </div>

  <div class="mb-4">
    <%= f.label :content, class: "block font-semibold" %>
    <%= f.text_area :content, rows: 6, class: "w-full border border-gray-300 rounded px-2 py-1" %>
  </div>

  <div class="mb-4">
    <%= f.label :tag_list, "Tags", class: "block font-semibold" %>
    <%= f.text_field :tag_list, class: "w-full border border-gray-300 rounded px-2 py-1" %>
  </div>

  <div class="mb-4">
    <%= f.label :public, class: "inline-flex items-center" do %>
      <%= f.check_box :public, class: "mr-2" %> Make public
    <% end %>
  </div>

  <%= f.submit class: "bg-blue-500 text-white px-4 py-2 rounded" %>
<% end %>
