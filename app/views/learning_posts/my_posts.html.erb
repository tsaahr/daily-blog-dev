<h1 class="text-2xl font-bold mb-4">My Posts</h1>

<%= link_to "New Post", new_learning_post_path, class: "bg-green-500 text-white px-4 py-2 rounded mb-4 inline-block" %>

<% @learning_posts.each do |post| %>
  <div class="bg-white p-4 mb-4 rounded shadow">
    <h2 class="text-xl font-semibold"><%= link_to post.title, post %></h2>
    <p class="text-sm text-gray-500"><%= post.public ? "Public" : "Private" %> â€¢ <%= time_ago_in_words(post.created_at) %> ago </p>
    <div class="mt-2">
      <% post.tag_list.each do |tag| %>
        <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded mr-2">#<%= tag %></span>
      <% end %>
    </div>
    <div class="mt-2">
      <%= link_to "Edit", edit_learning_post_path(post), class: "text-yellow-600 mr-4" %>
      <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure" }, class: "text-red-600" %>
    </div>
  </div>
<% end %>
