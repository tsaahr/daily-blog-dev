<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">📚 My Posts</h1>
    <%= link_to "New Post", new_learning_post_path, class: "bg-green-600 hover:bg-green-700 text-white font-semibold px-5 py-2 rounded-md transition" %>
  </div>

  <% if @learning_posts.empty? %>
    <p class="text-gray-500 italic">You haven't written any posts yet.</p>
  <% end %>

  <div class="space-y-6">
    <% @learning_posts.each do |post| %>
      <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition">
        <h2 class="text-2xl font-semibold text-blue-700 hover:underline">
          <%= link_to post.title, post %>
        </h2>
        <p class="text-sm text-gray-500 mb-2">
          <%= post.public ? "🌐 Public" : "🔒 Private" %> · <%= time_ago_in_words(post.created_at) %> ago
        </p>
        <div class="mt-2 flex flex-wrap gap-2">
          <% post.tag_list.each do |tag| %>
            <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">#<%= tag %></span>
          <% end %>
        </div>
        <div class="mt-4 flex gap-4 text-sm">
          <%= link_to "✏️ Edit", edit_learning_post_path(post), class: "text-yellow-600 hover:underline" %>
          <%= link_to "🗑️ Delete", post, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
