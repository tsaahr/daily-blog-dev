<h2 class="text-xl font-semibold text-gray-800 mb-4">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block font-medium text-sm text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", 
        class: "mt-1 block w-full rounded-md border border-gray-400 shadow-sm focus:border-indigo-600 focus:ring focus:ring-indigo-300 focus:ring-opacity-50" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block font-medium text-sm text-gray-700" %>
    <%= f.password_field :password, autocomplete: "current-password", 
        class: "mt-1 block w-full rounded-md border border-gray-400 shadow-sm focus:border-indigo-600 focus:ring focus:ring-indigo-300 focus:ring-opacity-50" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4 flex items-center">
      <%= f.check_box :remember_me, class: "mr-2 rounded border-gray-400 text-indigo-600 focus:ring-indigo-500" %>
      <%= f.label :remember_me, class: "text-sm text-gray-700" %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Log in", class: "w-full py-2 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 font-semibold transition-colors" %>
  </div>
<% end %>

<div class="mt-4">
  <%= render "devise/shared/links" %>
</div>
